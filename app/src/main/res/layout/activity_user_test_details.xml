<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lime"
    tools:context=".View.User_Test_Details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBackToUserManager_TestDT"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="@color/brown"
                android:scaleX="-1"
                android:layout_gravity="center"
                app:srcCompat="@drawable/arrow" />

            <TextView
                android:id="@+id/textView67"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="95dp"
                android:textColor="@color/brown"
                android:textSize="11pt"
                android:textStyle="italic"
                android:fontFamily="@font/alata"
                android:text="TEST DETAILS"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenBT_TestList_TestDT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backgr_button_green"
                android:backgroundTint="@color/green"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="Tên Bài Tập"
                android:textColor="@color/brown"
                android:textSize="9pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLL_TestList_TestDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Do assignment the 8th time"
                android:textColor="@color/black"
                android:textSize="8pt" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView70"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Test day: "
                    android:textColor="@color/brown"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/tvNgayLam_TestList_TestDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="90dp"
                    android:text="11/19/2024: 11h11p11s"
                    android:textColor="@color/brown"
                    android:textSize="8pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView72"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Total time: "
                    android:textColor="@color/brown"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/tvTongThoiGian_TestList_TestDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="77dp"
                    android:text="15:00:10"
                    android:textColor="@color/brown"
                    android:textSize="8pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView74"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Score: "
                    android:textColor="@color/brown"
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/tvDiem_TestList_TestDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="113dp"
                    android:text="9"
                    android:textColor="@color/red"
                    android:textSize="8pt" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_user_radius_quiz_test"
            android:backgroundTint="#DADCDF"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerViewTestDetails"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>