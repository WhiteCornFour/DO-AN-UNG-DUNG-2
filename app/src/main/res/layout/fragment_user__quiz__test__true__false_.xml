<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".View.User_Quiz_Test_True_False_Fragment">
    <TextView
        android:id="@+id/tvNDCH_TrueFalse_Quiz_User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10.5pt"
        android:textColor="@color/black"
        android:fontFamily="@font/alata"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="40dp"
        android:text="Nội dung câu hỏi" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbTrue_Essay_Quiz_User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textView68"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10.5pt"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:fontFamily="@font/alata"
            android:layout_gravity="center"
            android:text="True" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbFalse_Essay_Quiz_User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10.5pt"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:fontFamily="@font/alata"
            android:layout_gravity="center"
            android:text="False" />
    </LinearLayout>
</LinearLayout>