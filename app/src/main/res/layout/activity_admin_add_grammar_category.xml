<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".View.Admin_Add_Grammar_Category">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBackDNP"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginRight="26dp"
            android:src="@drawable/baseline_chevron_left_24" />

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="THÊM DẠNG NGỮ PHÁP"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/backgr_admin_blue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thông tin cần thêm"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backgr_admin_white"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:text="Mã dạng ngữ pháp: "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtMaDNP"
                    android:layout_width="215dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_admin_unedit_text"
                    android:drawableStart="@drawable/id_icon_focus"
                    android:ems="10"
                    android:enabled="false"
                    android:inputType="textPersonName"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Tên dạng ngữ pháp: "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtTenDNP"
                    android:layout_width="215dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_admin_edit_text"
                    android:drawableStart="@drawable/custom_name_icon"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Mô tả: "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtMoTaDNP"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/custom_admin_edit_text"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:lineSpacingMultiplier="4"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/btnThemDNP"
            android:background="@drawable/backgr_radius_chochu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Thêm"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/blue" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvListHeaderDNP"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:paddingTop="7dp"
                android:paddingBottom="9dp"
                android:paddingStart="10dp"
                android:text="Danh sách các dạng bài tập đã thêm"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
        <ListView
            android:id="@+id/lvDNP"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>
    </LinearLayout>
</LinearLayout>