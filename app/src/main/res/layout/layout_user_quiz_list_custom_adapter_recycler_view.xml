<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgr_user_white"
    android:orientation="horizontal"
    android:elevation="5dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgQuizIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_quiz_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRecyclerViewTenBTQuizList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quiz 1"
                android:fontFamily="@font/alata"
                android:textColor="@color/brown"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRecyclerViewMoTaBTQuizList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description Quiz 1"
                android:fontFamily="@font/alata"
                android:textColor="@color/mist"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvRecyclerViewSoCauQuizList"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="10 Questions"
        android:fontFamily="@font/alata"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="@drawable/backgr_quiz_list_label"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_gravity="top|end" />

</LinearLayout>