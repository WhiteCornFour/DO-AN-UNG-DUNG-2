<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Admin_Edit_ExercisesCategory">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBackToMainPageSDNP"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/baseline_chevron_left_24" />

            <TextView
                android:id="@+id/tvHeaderSuaDangBT"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="60dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="SỬA DẠNG NGỮ PHÁP"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="720dp"
            android:background="@drawable/backgr_admin_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="TÌM KIẾM DẠNG NGỮ PHÁP"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backgr_admin_white"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="5dp"
                    android:text="Mã dạng ngữ pháp: "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtSuaDNPSearch"
                    android:layout_width="210dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_admin_edit_text"
                    android:drawableStart="@drawable/custom_id_icon"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/imgSuaDNPSearch"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/search_fill_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:background="@drawable/backgr_admin_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Kết quả tìm kiếm: "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSuaDNPSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/backgr_admin_white"
                    android:nestedScrollingEnabled="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Thông tin cập nhật"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backgr_admin_white"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:text="Mã dạng ngữ pháp: "
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtSuaMaDNP"
                        android:layout_width="215dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_admin_unedit_text"
                        android:drawableStart="@drawable/id_icon_focus"
                        android:ems="10"
                        android:enabled="false"
                        android:inputType="textPersonName"
                        android:paddingStart="14dp"
                        android:paddingEnd="12dp"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Tên dạng ngữ pháp: "
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtSuaTenDNP"
                        android:layout_width="215dp"
                        android:layout_height="40dp"
                        android:background="@drawable/custom_admin_edit_text"
                        android:drawableStart="@drawable/custom_name_icon"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:drawablePadding="8dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Mô tả: "
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtSuaMoTaDNP"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/custom_admin_edit_text"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:lineSpacingMultiplier="4"
                        android:paddingStart="14dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSuaDNP"
                android:background="@drawable/backgr_admin_white"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Sửa"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/blue" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>