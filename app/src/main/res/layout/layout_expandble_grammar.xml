<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutMother"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/itemClicked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_item_lv_grammar"
        android:backgroundTint="@color/green"
        android:padding="3dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTDBT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textSize="9pt"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/adlam_display"
                android:paddingStart="30dp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@drawable/backgr_radius_chochu"
                android:text="Tên dạng ngữ pháp" />

            <ImageView
                android:id="@+id/imgExpand_Grammar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:src="@drawable/expand1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleY="-1"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNP"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp" />

    </LinearLayout>
</LinearLayout>
