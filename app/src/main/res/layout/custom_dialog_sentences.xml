<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/backgr_user_search_history_white"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/custom_vienden"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTopicTitle_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Topic Title"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTopicContent_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Topic content here"
            android:textColor="@color/black"
            android:textSize="8pt"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/lnSupportDia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lvdialog_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


    </LinearLayout>
    <include
        android:id="@+id/supportDialog"
        layout="@layout/layout_user_sentences_support_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnX_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_topicss"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="8pt"
            android:textColor="@color/white"
            android:text="X" />
    </LinearLayout>


</LinearLayout>









