<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="8dp"
    android:padding="5dp"
    android:background="@drawable/backgr_custom_adapter_history_lime">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAnhTuVung_CustomAdapter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:shapeAppearanceOverlay="@style/RoundSquare"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTuTiengAnhLoaiTuDictionary_CustomRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:fontFamily="@font/adlam_display"
            android:text="school"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvPhatAm_CustomRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="/acjaj/"
            android:fontFamily="@font/adlam_display"
            android:textColor="@color/brown"
            android:textSize="13sp" />
    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAudio_CustomAdapter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:shapeAppearanceOverlay="@style/RoundSquare"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"
        android:src="@drawable/audio_icon" />

</LinearLayout>