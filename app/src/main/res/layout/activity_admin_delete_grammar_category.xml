<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Admin_Delete_ExercisesCategory">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBackDeleteToMainPageDNP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="11pt"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:fontFamily="@font/alata"
            android:layout_marginLeft="50dp"
            android:text="XÓA DẠNG NGỮ PHÁP" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgr_admin_blue"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="@drawable/layout_backgr_search_delete_exer_cate"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtSearchForDeleteInDangBT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textStyle="italic"
                android:textColorHint="@color/black"
                android:textSize="7.5pt"
                android:layout_gravity="center"
                android:fontFamily="@font/alata"
                android:layout_marginLeft="5dp"
                android:hint="Nhập tên hoặc mã dạng ngữ pháp..." />

            <ImageView
                android:id="@+id/imgSerchForDeleteInDNP"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/baseline_search_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnResetForListViewInDNP"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginRight="165dp"
                android:textColor="@color/blue"
                android:backgroundTint="@color/white"
                android:textStyle="bold"
                android:background="@drawable/layout_boder_imge_func_button"
                android:text="Reset" />

            <Button
                android:id="@+id/btnDeleteAllForLVInDNP"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/layout_boder_imge_func_button"
                android:backgroundTint="@color/white"
                android:text="Xóa tất cả"
                android:textColor="@color/blue"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11pt"
                android:textColor="@color/black"
                android:background="@color/white"
                android:padding="5dp"
                android:textStyle="bold"
                android:fontFamily="@font/alata"
                android:text="Danh sách dạng ngữ pháp" />

            <ListView
                android:id="@+id/lvDSDNPTrongXoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>