<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgr_user_white"
    android:backgroundTint="#FCFCFC"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenBT_TestList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_button_green"
            android:backgroundTint="@color/green"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Tên Bài Tập"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/tvLL_TestList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:text="Do assignment the 8th time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:layout_gravity="center"
                android:text="Test day: " />

            <TextView
                android:id="@+id/tvNgayLam_TestList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:textColor="@color/brown"
                android:layout_gravity="center"
                android:layout_marginLeft="90dp"
                android:text="11/19/2024: 11h11p11s" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:layout_gravity="center"
                android:text="Total time: " />

            <TextView
                android:id="@+id/tvTongThoiGian_TestList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:layout_gravity="center"
                android:layout_marginLeft="77dp"
                android:textColor="@color/brown"
                android:text="15:00:10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView74"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:layout_gravity="center"
                android:text="Score: " />

            <TextView
                android:id="@+id/tvDiem_TestList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:textColor="@color/brown"
                android:layout_gravity="center"
                android:layout_marginLeft="113dp"
                android:text="9" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_ShowTestDetails"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/backgr_button_green"
            android:backgroundTint="@color/green"
            android:textColor="@color/brown"
            android:textSize="8pt"
            android:textStyle="italic"
            android:text="Test Details" />
    </LinearLayout>
</LinearLayout>