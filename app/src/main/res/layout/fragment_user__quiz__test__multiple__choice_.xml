<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.User_Quiz_Test_Multiple_Choice_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvFrameLayoutNoiDungCauHoiMC"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/adlam_display"
        android:textColor="@color/brown"
        android:text="Question: "/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdbFrameLayoutA"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_question_radio_button"
                android:button="@android:color/transparent"
                android:fontFamily="@font/adlam_display"
                android:text="A"
                android:textAlignment="center"
                android:textColor="@drawable/custom_question_text_view"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvFrameLayoutNDCauAQuizTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/adlam_display"
                android:text="A Description"
                android:textColor="@color/mist"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdbFrameLayoutB"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_question_radio_button"
                android:button="@android:color/transparent"
                android:fontFamily="@font/adlam_display"
                android:text="B"
                android:textAlignment="center"
                android:textColor="@drawable/custom_question_text_view"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvFrameLayoutNDCauBQuizTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/adlam_display"
                android:text="B Description"
                android:textColor="@color/mist"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdbFrameLayoutC"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_question_radio_button"
                android:button="@android:color/transparent"
                android:fontFamily="@font/adlam_display"
                android:text="C"
                android:textAlignment="center"
                android:textColor="@drawable/custom_question_text_view"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvFrameLayoutNDCauCQuizTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/adlam_display"
                android:text="C Description"
                android:textColor="@color/mist"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdbFrameLayoutD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_question_radio_button"
                android:button="@android:color/transparent"
                android:fontFamily="@font/adlam_display"
                android:text="D"
                android:textAlignment="center"
                android:textColor="@drawable/custom_question_text_view"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvFrameLayoutNDCauDQuizTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/adlam_display"
                android:text="D Description"
                android:textColor="@color/mist"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>