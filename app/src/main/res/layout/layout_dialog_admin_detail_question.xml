<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgr_admin_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView51"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/backgr_admin_blue"
        android:text="Detail Question"
        android:textColor="@color/white"
        android:textSize="9pt"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã câu hỏi: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="7pt" />

        <EditText
            android:id="@+id/edtAddDialogMaCauHoi"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_admin_unedit_text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung câu hỏi:"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="7pt" />

        <EditText
            android:id="@+id/edtAddDialogNoiDungCauHoi"
            android:layout_width="match_parent"
            android:enabled="false"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:layout_height="70dp"
            android:background="@drawable/custom_admin_unedit_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="7pt" />

        <EditText
            android:id="@+id/edtAddDialogDapAn"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:background="@drawable/custom_admin_unedit_text"
            android:textColor="@color/black"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mức độ: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="7pt" />

        <EditText
            android:id="@+id/edtAddDialogMucDo"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:background="@drawable/custom_admin_unedit_text"
            android:textColor="@color/black"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dạng bài tập : "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="7pt" />

        <EditText
            android:id="@+id/edtAddDialogDangBaiTap"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:background="@drawable/custom_admin_unedit_text"
            android:textColor="@color/black"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnConfirmAddCHBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Thêm" />

        <Button
            android:id="@+id/btnCancelAddCHBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:textStyle="bold"
            android:text="Hủy" />

    </LinearLayout>
</LinearLayout>