<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.User_Details_Information" >

    <!-- Header Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:background="@drawable/boder_item_lv_grammar">

        <ImageView
            android:id="@+id/backToProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:scaleX="-1"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/textView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="12pt"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/alata"
            android:text="EDIT PROFILE" />
    </LinearLayout>

    <!-- Avatar Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgEditAVT_User"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/logo"/>


        <ImageView
            android:id="@+id/imgEditImg_User"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/custom_name_icon" />
    </LinearLayout>

    <!-- Input Fields Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_button_brown"
            android:backgroundTint="@color/green"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/textView60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="9pt"
                android:textStyle="bold"
                android:fontFamily="@font/alata"
                android:layout_gravity="center_vertical"
                android:text="Full name: "/>

            <EditText
                android:id="@+id/edtFullName_User"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:textSize="9pt"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_button_brown"
            android:backgroundTint="@color/green"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="9pt"
                android:textStyle="bold"
                android:fontFamily="@font/alata"
                android:layout_gravity="center_vertical"
                android:text="Phone number:"/>

            <EditText
                android:id="@+id/edtPhoneNumber_User"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="phone"
                android:textSize="9pt"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_button_brown"
            android:backgroundTint="@color/green"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/textView65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="9pt"
                android:textStyle="bold"
                android:fontFamily="@font/alata"
                android:layout_gravity="center_vertical"
                android:text="Email:"/>

            <EditText
                android:id="@+id/edtEmail_User"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textEmailAddress"
                android:textSize="9pt"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Button Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lime"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:padding="16dp">

        <Button
            android:id="@+id/btnComfirmEdit_User"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:background="@drawable/boder_item_lv_grammar"
            android:backgroundTint="@color/green"
            android:textColor="@color/black"
            android:text="Comfirm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="@color/lime"
        android:background="@drawable/cured_background_xuoi"
        />
</LinearLayout>
