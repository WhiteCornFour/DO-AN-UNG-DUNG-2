<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lime"
    android:orientation="vertical"
    tools:context=".View.User_Register">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo_no_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgr_lv_grammar_user"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLoginTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/adlam_display"
                android:text="Let's get started!"
                android:textColor="@color/brown"
                android:textSize="16.5pt"
                android:textStyle="bold"
                android:layout_marginLeft="42dp"/>

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textSize="9pt"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="5dp"
                android:text="Create your new account" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtRegisterNameUser"
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_edit_text"
                    android:drawableStart="@drawable/custom_user_name_icon"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/alata"
                    android:hint="User name"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/brown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtRegisterAccount"
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_edit_text"
                    android:drawableStart="@drawable/custom_account_icon"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/alata"
                    android:hint="Account"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/brown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtRegisterPassword"
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_edit_text"
                    android:drawableStart="@drawable/custom_password_icon"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/alata"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/brown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtRegisterRewritePassword"
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_edit_text"
                    android:drawableStart="@drawable/custom_rewrite_password_icon"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/alata"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/brown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtRegisterPhone"
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_edit_text"
                    android:drawableStart="@drawable/custom_phone_icon"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/alata"
                    android:hint="Phone"
                    android:inputType="number"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/brown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtRegisterEmail"
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_edit_text"
                    android:drawableStart="@drawable/custom_email_icon"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:fontFamily="@font/alata"
                    android:hint="Email"
                    android:inputType="textPersonName"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/brown" />
            </LinearLayout>

            <Button
                android:id="@+id/btnRegisterUser"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="8pt"
                android:backgroundTint="@color/brown"
                android:fontFamily="@font/alata"
                android:padding="10dp"
                android:background="@drawable/backgr_button_green"
                android:text="Get in study !"
                android:textColor="@color/white"
                android:textStyle="bold"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginBottom="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/brown"
                    android:textStyle="italic"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/alata"
                    android:text="Already have an account ?" />

                <TextView
                    android:id="@+id/tvSignInRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/brown"
                    android:textStyle="italic|bold"
                    android:fontFamily="@font/alata"
                    android:text="Sign in !" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>