<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lime"
    tools:context=".View.User_ForgotPassword">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo_no_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgr_lv_grammar_user"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLoginTopic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/adlam_display"
            android:text="Forgot Password"
            android:textColor="@color/brown"
            android:textSize="16.5pt"
            android:textStyle="bold"
            android:layout_marginLeft="42dp"/>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:textSize="7.5pt"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/brown"
            android:text="Enter the numberphone associated with your account and we'll send an OTP to reset your password." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal"
>

            <EditText
                android:id="@+id/edtPhoneForgotPass"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/custom_email_icon"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/alata"
                android:hint="0786******"
                android:inputType="textPersonName"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textStyle="italic"
                android:textColor="@color/brown"
                android:nextFocusDown="@id/btnSendForgotPass"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnSendForgotPass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/alata"
            android:textStyle="bold"
            android:background="@drawable/boder_round_btn_forgotpass"
            android:textColor="@color/white"
            android:textSize="8.5pt"
            android:text="Send"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember your password?"
                android:fontFamily="@font/alata"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvSignInForgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/alata"
                android:text="Sign in"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>