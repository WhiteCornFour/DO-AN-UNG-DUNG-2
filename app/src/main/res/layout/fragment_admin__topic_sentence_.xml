<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Admin_TopicSentence_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitleTopicSentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/alata"
            android:text="QUẢN LÝ CÂU CHỦ ĐỀ"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lnThemCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/layout_boder_imge_func_button"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewAddTopicSentence"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/plus_icon" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewAddTopicSentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/alata"
                    android:text="Thêm"
                    android:textColor="@color/black"
                    android:textSize="10pt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnSuaCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/layout_boder_imge_func_button"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewEditTopicSentence"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/update_icon" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewEditTopicSentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/alata"
                    android:text="Sửa"
                    android:textColor="@color/black"
                    android:textSize="10pt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnXoaCT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/layout_boder_imge_func_button"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewDeleteTopicSentence"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/minus_icon" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textViewDeleteTopicSentence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/alata"
                    android:text="Xóa"
                    android:textColor="@color/black"
                    android:textSize="10pt" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDSTopicSentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:fontFamily="@font/alata"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"
                android:text="Danh sách câu chủ đề" />

            <ListView
                android:id="@+id/lvDSTopicSentenceFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
