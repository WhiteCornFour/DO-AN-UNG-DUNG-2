<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Admin_Edit_Sample_Sentence">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBackToMainPage_SS"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/baseline_chevron_left_24" />

            <TextView
                android:id="@+id/tvHeaderSua_SS"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginRight="60dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="SỬA MẪU CÂU"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_admin_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Tìm kiếm mẫu câu"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backgr_admin_white"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="5dp"
                    android:text="Mã mẫu câu: "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtSuaSearch_SS"
                    android:layout_width="207dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_admin_edit_text"
                    android:drawableStart="@drawable/custom_id_icon"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingStart="14dp"
                    android:paddingEnd="12dp"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/imgSuaSearch_SS"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/search_fill_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:background="@drawable/backgr_admin_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Kết quả tìm kiếm: "
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSuaSearch_SS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/backgr_admin_white"
                    android:nestedScrollingEnabled="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Thông tin cập nhật"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/backgr_admin_white"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="6dp"
                            android:text="Mã mẫu câu: "
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtMa_SS"
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/custom_admin_unedit_text"
                            android:drawableStart="@drawable/id_icon_focus"
                            android:drawablePadding="8dp"
                            android:ems="10"
                            android:enabled="false"
                            android:inputType="textPersonName"
                            android:paddingStart="14dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:text="Chủ đề: "
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerChonChuDe_SS"
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="50dp"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Tên mẫu câu: "
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtTen_SS"
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/custom_admin_edit_text"
                            android:drawableStart="@drawable/custom_name_icon"
                            android:drawablePadding="8dp"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:paddingStart="14dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView211"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Phiên dịch: "
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtPD_SS"
                            android:layout_width="220dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/custom_admin_edit_text"
                            android:drawableStart="@drawable/custom_name_icon"
                            android:drawablePadding="8dp"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:paddingStart="14dp"
                            android:paddingEnd="19dp"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Tình huống sử dụng: "
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtTHSD_SS"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:background="@drawable/custom_admin_edit_text"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:lineSpacingMultiplier="4"
                            android:paddingStart="14dp"
                            android:paddingEnd="12dp"
                            android:textColor="@color/black"
                            android:textSize="13sp" />
                    </LinearLayout>

                </LinearLayout>

            <Button
                android:id="@+id/btnSua_SS"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backgr_admin_white"
                android:text="Sửa"
                android:textColor="@color/blue"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>