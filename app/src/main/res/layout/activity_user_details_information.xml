<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.User_Details_Information" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_item_lv_grammar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backToQuizMainPage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:scaleX="-1"
            app:srcCompat="@drawable/arrow" />

        <TextView
            android:id="@+id/textView62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="12pt"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/alata"
            android:text="PROFILE DETAILS" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAVT_User"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginLeft="110dp"
                android:padding="3dp"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_button_brown"
            android:backgroundTint="@color/green"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTenUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/alata"
                android:paddingLeft="80dp"
                android:paddingTop="15dp"
                android:paddingRight="80dp"
                android:paddingBottom="15dp"
                android:text="Full name: Ngô Hoàng Nam"
                android:textColor="@color/black"
                android:textSize="7pt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_button_brown"
            android:backgroundTint="@color/green"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSDTUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="7pt"
                android:fontFamily="@font/alata"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="75dp"
                android:paddingRight="75dp"
                android:text="Phone number: 0786901063" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgr_button_brown"
            android:backgroundTint="@color/green"
            android:layout_gravity="center"
            android:layout_marginBottom="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEmailUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="7pt"
                android:fontFamily="@font/alata"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="Emai: hoangnam18102004@gmail.com"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/lime"
            android:background="@drawable/cured_background_xuoi"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLogoutAcc"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="100dp"
                app:srcCompat="@drawable/logout" />

            <Button
                android:id="@+id/btnEditUser"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:background="@drawable/boder_item_lv_grammar"
                android:backgroundTint="@color/green"
                android:textColor="@color/black"
                android:layout_marginRight="23dp"
                android:text="Edit Profile" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>